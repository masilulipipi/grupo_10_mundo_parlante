<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('partials/head', {title: 'Log In'}) %>
<body>
	<!-- ID Main container es el que contiene toooooodo -->
	<div class="container-fluid" id="main-container">
		<!-- Header -->
		<%- include('partials/header') %>
	
			<!-- ACA VAN LAS COSAS DEL FORMULARIO -->
			<div class="row titulo-seccion justify-content-center"><h1>Logueate</h1></div>
			<div class="form-group justify-content-center">
			<form action="/users/login" method="POST">
				<div class="row">
					<div  class="col-12">
						<label class="pt-1">Email:</label>
						<input type="email"name="email" class="form-control" placeholder="Ej: email@server.com">
					</div>
					<div class="col-12">
						<label class="pt-1">Contraseña:</label>
						<input type="password" name="password" class="form-control" placeholder="******">
					</div>
					<div class="col-12 ml-4 pt-2">
						<input type="checkbox" class="form-check-input " name="remember_user"><label>Recordarme</label>
					</div>
					<div class="col-12">
						<button type="submit" class="btn btn-amarillo btn-block" >Log In</button>
					</div>
				</div>
			</form>
		</div>
		<!-- Footer -->
		<%- include('partials/footer') %>
	<!-- ↓↓ aca termina el DIV main container ↓↓ -->
	</div>
	
</body>
</html>