<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('partials/head', {title: 'Contacto'}) %>
<body>
	<!-- ID Main container es el que contiene toooooodo -->
	<div class="container-fluid" id="main-container">
		<!-- Header -->
		<%- include('partials/header') %>
		<!-- ACA VAN LAS COSAS DEL FORMULARIO de contacto -->
		<div class="container vh-100 my-3">

			<!-- ACA Va el titulo de la pagina -->
			<div class="row ">
				<div class="col-12">
					<h1 class="text-center justify-items-center">Contacto</h2>
				</div>
			</div>

			<!-- Row que contiene el FORM y los DATOS -->
			<div class="row">
				<!-- Columna FORM -->
				<div class="col-12 col-md-6">
					<form action="/register" method="POST" enctype="multipart/form-data">
						<div class="row">
							<!-- Columna para form de contacto -->
							<div class="col-12 mt-2">
								<div class="row">
									<h4>Envianos un mensaje:</h4>
								</div>
								<div class="row">
									<label>Nombre:</label>
									<input type="text" name="name" class="form-control mb-1" placeholder="Ej: Ana">
								</div>
								<div class="row">
									<label>Apellido:</label>
									<input type="text" name="lastname" class="form-control mb-1" placeholder="Ej: Pérez">
								</div>
								<div  class="row">
									<label>Email:</label>
									<input type="email"name="email" class="form-control mb-1" placeholder="Ej: email@server.com">
								</div>
								<div class="row">
									<label>Mensaje:</label>
									<textarea type="text" name="mensaje" class="form-control mb-2" placeholder="Ej: Hola, tengo una consulta..."></textarea>
								</div>
								<div  class="row">
									<label></label>
								<button type="submit" class="btn btn-amarillo btn-block">Enviar</button>
								</div>
							</div>
							<!-- Columna de informacion -->
						</div>
						<!-- ↑↑ aca termina el div de ROW -->
					</form>
				</div>

				<!-- Columna DATOS -->
				<div class="col-12 col-md-6 mt-3  p-2">
					<h4 class="text-right">Donde Estamos</h4>
					<p class="text-right">Calle Falsa 123, Springfield, CO</p>
					<p class="text-right">+54911 5555-7896</p>
					<p class="text-right">Email: info@mundoparlante.com</p>
				</div>

			</div>
			
			
			<!-- ↓↓ aca termina el DIV main container ↓↓ -->
		</div>
		
		<!-- ↓↓ aca termina el DIV main container-FLUID ↓↓ -->
		<!-- Footer -->
		<%- include('partials/footer') %>
	</div>
</div>
	
</body>
</html>