<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('partials/head', {title: 'Productos'}) %>
<body>
	<!-- ID Main container es el que contiene toooooodo -->
	<div class="container" id="main-container">
		<!-- Header -->
		<%- include('partials/header') %>
		
		<!-- ACA Va el titulo de la pagina -->
			<div class="row justify-content-center"><h1>Nuestros Productos</h1></div>
		
		
		
	
		<div class="row" id="main-content-content">
			<!-- Columna que contiene todo lo relativo a filtros -->
			<div class="col-12 col-md-3 filtros" id="main-content-titulo-filtros">FILTROS
				<div class="row border filtros-content">
					<!-- en esta col va titulo: MARCA -->
					<div class="col-12"><strong>Marca</strong></div>
						<!-- en esta col van los items de MARCA -->
						<div class="col-6 col-md-12">
							<input type="checkbox" name="marca" value="marca1">JBL<br>
							<input type="checkbox" name="marca" value="marca2">Rock It<br>
							<input type="checkbox" name="marca" value="marca3">Focal<br>
							<input type="checkbox" name="marca" value="marca4">Bang & Olufsen<br>
							<input type="checkbox" name="marca" value="marca5">Senheiser<br>
						</div>
					<div class="col-12"><br><strong>Modelo</strong></div>
						<div class="col-6 col-md-12">
								<input type="checkbox" name="modelo" value="modelo1">Modelo 1<br>
								<input type="checkbox" name="modelo" value="modelo2">Modelo 2<br>
								<input type="checkbox" name="modelo" value="modelo3">Modelo 3<br>
								<input type="checkbox" name="modelo" value="modelo4">Modelo 4<br>
								<input type="checkbox" name="modelo" value="modelo5">Modelo 5<br>
						</div>
				</div>
			</div>
			<!-- columna en donde van LOS PRODUCTOS ETC -->
			<div class="col-12 col-md-9 border"id="main-content-items">
				<!-- ROW en donde van los "product boxes" -->
				<!-- IMAGENES DE PRODUCTOS: img-thumbnail le pone un borde blanco a la foto -->
				<div class="row justify-content-center">
					<div class="card-columns">
					<% productos.forEach(oneProduct => { %>
						<div class="card bg-dark text-white text-left">
							<a href="/productos/detalle/<%= oneProduct.id %>"><h3 class="card-title"><%= oneProduct.nombre %></h3></a>
							<img src="https://placeimg.com/250/250/tech" class="card-img-top" alt="">
							<h4 class="card-text text-right">$<%= oneProduct.precio %></h4>
							<div class="text-right"><button class="btn-amarillo" alt="Agregar al carrito">Agregar al carrito</button></div>
						</div>
					<% }); %>
				</div>
			</div>
		</div>
	
		<!-- Footer -->
		<%- include('partials/footer') %>
	<!-- ↓↓ aca termina el DIV main container ↓↓ -->
	</div>
	
</body>
</html>